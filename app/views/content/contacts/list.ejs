<div class="container">
    <h1><%=title %></h1>
    <a href="/contacts-add" class="btn btn-primary" role="button" style="background-color: #0F3D3E; border-color: #0F3D3E;">
        <i class="fas fa-plus-circle"></i> Add a Contact
    </a>
    <div class="row">
        <div class="column">
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Contact Name</th>
                        <th scope="col">Contact Phone Number</th>
                        <th scope="col">Contact Email</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="contactList">
                    <% for(let count=0; count < contacts.length; count++) { %>                   
                        <tr>
                            <td scope="row" class="text-center"></td>
                            <td><%= contacts[count].contactName %></td>
                            <td><%= contacts[count].contactNumber %></td>
                            <td><%= contacts[count].contactEmail %></td>
                            <td class="text-center col-1">
                                <a class="btn btn-primary" style="background-color: #0F3D3E; border-color: #0F3D3E;" href="/contacts-update/<%= contacts[count].id %>">
                                    Update
                                </a>
                            </td>
                            <td class="text-center col-1">
                                <a class="btn btn-warning" href="/contacts-delete/<%= contacts[count].id %>">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>